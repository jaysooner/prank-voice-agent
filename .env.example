# Server Configuration
PORT=8080

# This MUST be your publicly accessible host (e.g., https://<your-id>.ngrok.io)
# Do NOT include a trailing slash
PUBLIC_HOST=https://your-public-host.example.com

# Twilio Credentials
TWILIO_ACCOUNT_SID=ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
TWILIO_AUTH_TOKEN=your_auth_token

# This is the Twilio phone number you bought, in E.164 format
TWILIO_CALLER_ID=+15551234567

# Venice.ai Credentials (for LLM)
# Get your API key from https://venice.ai/
VENICE_API_KEY=your_venice_api_key

# Venice.ai Model Configuration
# LLM Models: llama-3.3-70b, llama-3.1-405b, dolphin-mistral-24b, mistral-31-24b
VENICE_LLM_MODEL=llama-3.3-70b

# ElevenLabs Credentials (for TTS)
# Get your API key from https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# ElevenLabs Voice ID
# Find voices at https://elevenlabs.io/voice-library
ELEVENLABS_VOICE_ID=EXAVITQu4vr4xnSDxMaL

# OpenAI Credentials (for Whisper Speech-to-Text)
# Get your API key from https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key

# Call Configuration
MAX_CALL_SECONDS=240
