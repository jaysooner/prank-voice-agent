# Server Configuration
PORT=8080

# This MUST be your publicly accessible host (e.g., https://<your-id>.ngrok.io)
# Do NOT include a trailing slash
PUBLIC_HOST=https://your-public-host.example.com

# Twilio Credentials
TWILIO_ACCOUNT_SID=ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
TWILIO_AUTH_TOKEN=your_auth_token

# This is the Twilio phone number you bought, in E.164 format
TWILIO_CALLER_ID=+15551234567

# ElevenLabs Credentials
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# Default voice to use (can be overridden by frontend)
# Find Voice IDs here: https://api.elevenlabs.io/v1/voices
ELEVENLABS_VOICE_ID=Rachel

# Google Gemini Credentials
# Create an API key in Google AI Studio
GEMINI_API_KEY=your_gemini_api_key

# Call Configuration
MAX_CALL_SECONDS=240
