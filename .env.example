# Server Configuration
PORT=8080

# This MUST be your publicly accessible host (e.g., https://<your-id>.ngrok.io)
# Do NOT include a trailing slash
PUBLIC_HOST=https://your-public-host.example.com

# Twilio Credentials
TWILIO_ACCOUNT_SID=ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
TWILIO_AUTH_TOKEN=your_auth_token

# This is the Twilio phone number you bought, in E.164 format
TWILIO_CALLER_ID=+15551234567

# Venice.ai Credentials (for LLM and TTS)
# Get your API key from https://venice.ai/
VENICE_API_KEY=your_venice_api_key

# Venice.ai Model Configuration
# LLM Models: llama-3.3-70b, llama-3.1-405b, dolphin-mistral-24b, mistral-31-24b
VENICE_LLM_MODEL=llama-3.3-70b

# TTS Model (currently only tts-kokoro available)
VENICE_TTS_MODEL=tts-kokoro

# TTS Voice: af_sky, af_bella, am_adam, am_liam, bm_daniel, jm_kumo, etc.
# See full list at https://docs.venice.ai/api-reference/endpoint/audio/speech
VENICE_TTS_VOICE=am_adam

# Call Configuration
MAX_CALL_SECONDS=240
